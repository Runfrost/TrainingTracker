@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="index-background">

    <h2>Träningskalender</h2>

    <div id="calendar">
        @foreach (var day in Enumerable.Range(0, 7).Select(i => DateTime.Today.AddDays(-i)))
        {
            var workout = Model.Workouts.FirstOrDefault(w => w.Date.Date == day.Date);
            <div class="calendar-day @(workout != null ? "workout-day" : "")">
                <strong>@day.ToString("ddd dd")</strong>
                @if (workout != null)
                {
                    <div>@workout.Type</div>
                }
            </div>
        }
    </div>

</div>
