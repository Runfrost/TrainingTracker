@page
@model IndexModel
@{
    ViewData["Title"] = "Activities";
}

<div class="activity-background">
    <div class="activities-panel">

        <h1 class="activities-title">Activities</h1>
        <p class="activities-intro">
            Add and track your runs, rides and walks in one place.
        </p>


        <!-- FORM: samma backend-fält, bara lite snyggare -->
        <form method="post">
            <input asp-for="Activity.Id" type="hidden" />
            <input asp-for="Activity.ActivityDate" type="hidden" />

            <div class="mb-2">
                <select asp-for="Activity.Type"
                        asp-items="Model.ActivityTypes"
                        class="form-select activities-input">
                    <option value="">Select activity type</option>
                </select>
            </div>

            <div class="mb-2">
                <input asp-for="Activity.Name"
                       class="form-control activities-input"
                       placeholder="Name" />
            </div>

            <div class="mb-2">
                
                <input asp-for="Activity.ActivityDate"
                       class="form-control activities-input"
                       type="date" />
                <span asp-validation-for="Activity.ActivityDate" class="text-danger"></span>
            </div>


            <div class="mb-3">
                <input asp-for="Activity.Distance"
                       class="form-control activities-input"
                       placeholder="Distance" />
            </div>

            <button type="submit" class="activities-btn">
                Add activity
            </button>
        </form>




       @* Tabellen med aktiviteter *@
        <h2 class="activities-subtitle">Recent activities</h2>

        <div class="activities-table-wrapper">
            <table class="activities-table">
                <thead>
                    <tr>
                        @* <th>ID</th> *@
                        <th>Type</th>
                        <th>Title</th>
                        <th>Distance</th>
                        <th>Date</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var activity in Model.Activities.OrderByDescending(a => a.ActivityDate))
                    {
                        <tr>
                            @* <td class="text-muted">@activity.Id</td> *@
                            <td>@activity.Type</td>
                            <td>@activity.Name</td>
                            <td>@activity.Distance</td>
                            <td>@activity.ActivityDate</td>
                            <td>
                                <a asp-route-editId="@activity.Id">Edit</a>
                                &nbsp;|&nbsp;
                                <a asp-route-deleteId="@activity.Id" class="text-danger">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/activities.css" />
}
