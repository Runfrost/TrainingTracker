@page
@model ActivitiesModel
@{
    ViewData["Title"] = "Activities";
}

<div class="activity-background">
    <div class="activities-panel">

        <h1 class="activities-title">Activities</h1>
        <p class="activities-intro">
            Add and track your runs, rides and walks in one place.
        </p>


        <!-- FORM: samma backend-fält, bara lite snyggare -->
        <form method="post">
            <input asp-for="Activity.Id" type="hidden" />
            <input asp-for="SortColumn" type="hidden" />
            <input asp-for="SortDescending" type="hidden" />
            <div class="mb-2">
                <select asp-for="Activity.Type"
                asp-items="Model.ActivityTypes"
                class="form-select activities-input">
                    <option value="">Select activity type</option>
                </select>
            </div>

            <div class="mb-2">
                <input asp-for="Activity.Name"
                class="form-control activities-input"
                placeholder="Name" />
            </div>

            <div class="mb-2">

                <input asp-for="Activity.ActivityDate"
                class="form-control activities-input" />
                <span asp-validation-for="Activity.ActivityDate" class="text-danger"></span>
            </div>


            <div class="mb-3">
                <input asp-for="Activity.Distance"
                type="number"
                class="form-control activities-input"
                step="0.1"
                placeholder="Distance" />
            </div>

            <button type="submit" class="activities-btn">
                @(Model.Activity.Id == null ? "Add activity" : "Update activity")
            </button>


            
        </form>

        <form method="post" asp-page-handler="Filter">
            <input type="checkbox" asp-for="ShowCycling" onchange="this.form.submit()"/>
            <label asp-for="ShowCycling" class="text-black">Cycling</label>

            <input type="checkbox" asp-for="ShowRunning" onchange="this.form.submit()" />
            <label asp-for="ShowRunning" class="text-black">Running</label>

            <input type="checkbox" asp-for="ShowWalking" onchange="this.form.submit()" />
            <label asp-for="ShowWalking" class="text-black">Walking</label>
        </form>




       @* Tabellen med aktiviteter *@
        <h2 class="activities-subtitle">Recent activities</h2>

        <div class="activities-table-wrapper">
            <table class="activities-table">
                <thead>
                    <tr>
                        @* <th>ID</th> *@
                        <th>
                            <a asp-page="./activities" asp-route-SortColumn="Type" asp-route-SortDescending="@(Model.SortColumn == "Type" ? !Model.SortDescending : false)">Type</a>
                        </th>
                        <th>
                            <a asp-page="./activities" asp-route-SortColumn="Title" asp-route-SortDescending="@(Model.SortColumn == "Title" ? !Model.SortDescending : false)">Title</a>
                        </th>
                        <th>          
                            <a asp-page="./activities" asp-route-SortColumn="Distance" asp-route-SortDescending="@(Model.SortColumn == "Distance" ? !Model.SortDescending : false)">Distance</a>
                        </th>
                        <th>
                            <a asp-page="./activities" asp-route-SortColumn="Date" asp-route-SortDescending="@(Model.SortColumn == "Date" ? !Model.SortDescending : false)">Date</a>
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var activity in Model.Activities)
                    {
                        <tr>
                            @* <td class="text-muted">@activity.Id</td> *@
                            <td>@activity.Type</td>
                            <td>@activity.Name</td>
                            <td>@activity.Distance</td>
                            <td>@activity.ActivityDate</td>
                            <td>
                                <a asp-route-editId="@activity.Id">Edit</a>
                                &nbsp;|&nbsp;
                                <a asp-route-deleteId="@activity.Id" class="text-danger">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/activities.css" />
}
